<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Strategy"
    android:background="#b58459">

    <TextView
        style="@style/NadeViewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/best_strat"
        android:background="#d4b07c"
        android:textSize="34sp"
        android:textAlignment="center"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:padding="18dp"/>

    <Button
        style="@style/MyButtonStyle"
        android:background="@drawable/flash_tile"
        android:layout_margin="4dp"
        android:textSize="36sp"
        android:id="@+id/btnPlayTone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/show_strategy"/>

</LinearLayout>