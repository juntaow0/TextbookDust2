<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b58459"
    tools:context=".UtilityView">

    <TextView
        android:id="@+id/tvNade"
        style="@style/NadeViewText"
        android:textSize="35sp"
        android:background="#d4b07c"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:padding="18dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDes"
        style="@style/NadeViewText"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:background="#d4b07c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">
        <LinearLayout
            android:id="@+id/mediaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C19771"
            android:orientation="vertical">

            <VideoView
                android:id="@+id/vvv"
                android:layout_width="match_parent"
                android:layout_height="360dp" />

            <TextView
                style="@style/NadeViewText"
                android:text="@string/details"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivp"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/mission"/>

            <TextView
                android:id="@+id/tvMDes0"
                style="@style/NadeViewText"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivt"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/mission" />

            <TextView
                android:id="@+id/tvMDes1"
                style="@style/NadeViewText"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>